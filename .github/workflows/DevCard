permissions:
  content: write

on:
  workflow_dispatch:
  push:
    branches:
      - main
    schedule:
      - cron: "0 0 * * *"

jobs:
  devacrd:
    runs-on: ubuntu-latest
    setps:
      - name: devcard
        uses: dailydotdev/action-devcard@2.0.2
        with:
          .devcard_id: ${{ secrets.DEVCARD_ID }}
